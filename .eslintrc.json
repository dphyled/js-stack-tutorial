{
	"env": {
		"browser": true,
		"jest": true
	},	
	"extends": [
		"airbnb",
		"plugin:flowtype/recommended"
	],
	"plugins": [
		"flowtype",
		"compat"
	],
	"rules": {
		"semi": [2, "never"],
		"no-unexpected-multiline": 2,
		"linebreak-style": [2, "windows"],
		"compat/compat": 2,
        "indent": 0,
        "no-tabs": 0,
        "eol-last": 0,
        "react/jsx-indent": 0,
        "comma-dangle": 0,
        "keyword-spacing": 0,
        "space-infix-ops": 0,
        "no-trailing-spaces": 0
	},
	"settings": {
		"polyfills": ["fetch"]
	}
}